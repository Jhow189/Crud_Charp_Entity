@page
@model Pim8.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Olá, Admin, seja bem vindo a sua Playlist!</h1>

<p>
    <a asp-page="Create">Adicionar um novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Alterar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-success">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
