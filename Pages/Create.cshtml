@page
@model Pim8.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adicione um novo vídeo de streaming</h1>

<h4>Vídeo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produto.Nome" class="control-label">Nome do vídeo</label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Preco" class="control-label">Tempo</label>
                <input asp-for="Produto.Preco" class="form-control" />
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding:20px 20px 0 0;">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-danger">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
