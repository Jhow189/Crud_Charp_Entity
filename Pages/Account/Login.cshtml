@page "Account/Login"
@model LoginModel
@{
    ViewData["Title"] = "Login";
}  

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="col-2">
                <label asp-for="Credential.UserName">Login</label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.UserName" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="Credential.UserName"></span>

        </div>        
        <div class="form-group">
            <div class="col-2">
                <label asp-for="Credential.Password">Senha</label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" class="form-control"/>
            </div>
        </div>   
        <span class="text-danger" asp-validation-for="Credential.Password"></span>

        <div class="form-group">
            <div class="col-2" style="padding:20px 20px 0 0">
                <input type="submit" class="btn btn-outline-primary" value="Logar"/>
                <input type="submit" class="btn btn-outline-danger" value="Registrar" />
            </div>
        </div>
    </form>
</div>  

